<div class='new-diary-back'>
  <div class='new-diary'>
    <%= form_with model: @diary_point, url: diaries_path, method: :post, id: "diary-form", local: true do |f| %>
      <%= render "shared/error_messages", model: f.object %>


      <div class="field">
      <%= f.label :title, "タイトル"%><br />
      <%= f.text_field :title, class: :title_new %>
      </div>

      <div class="field">
      <%= f.label :text, "本文"%><br />
      <%= f.text_area :text, class: :note %>
      </div>

      <div class="actions">
        <%= f.submit "投稿" %>
      </div>

    <% end %>

</div>
  <%= link_to "一覧に戻る", root_path, class: :return_toppage_new %>
